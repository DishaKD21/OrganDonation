<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/wholeprojectcss.css">
    <script src="script.js" defer></script>
    <title>Donor-Registration</title>
</head>
<body class="registration-body">
    <form action="#" class="form">
        <h1 class="text-center">Donor Confirmation-Form</h1>

        <!-- progress-bar -->
         <div class="progressbar">
            <div class="progress" id="progress"></div>
            <div class="progress-step progress-step-active" data-title="Donor-Details" ></div>
            <div class="progress-step" data-title="Health"></div>
            <div class="progress-step" data-title="Consent"></div>
         </div>

        <!-- steps -->
     <div class="form-step form-step-active">
            
            <!-- Adharnumber -->
            <div class="input-group">
                <label for="adharnnumber">Donor's Adhar-Number</label>
                <input type="text" name="adharnumber" id="adharnumber" maxlength="12" />
            </div>

            <!-- fullname -->
            <div class="input-group">
                <label for="fullname">Donor's FullName</label>
                <input type="text" name="fullname" id="fullname"/>
            </div>

         <!-- Weight Field -->
        <div class="input-group">
            <label for="weight">Weight (in kg): </label>
            <input type="number" id="weight" name="weight" placeholder="Enter weight" required min="0">   
        </div>

         <div class="">
            <a href="#" class="nextbutton button width-50 ml-auto">Next</a>  
        </div>   
     </div>  

     <!--secondpage-->
     <div class="form-step">

            <!-- Blood Group -->
            <div class="input-group">
                <label for="blood_group">Blood Group: </label>
            <select id="blood_group" name="blood_group" required>
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="AB">AB</option>
                <option value="O">O</option>
            </select>
            </div>
                  
            <!-- date-of-death-->
            <div class="input-group">
                <label for="deathdate">Donor's Date Of Death</label>
                <input type="date" name="deathdate" id="deathdate"/>
            </div>

            <!-- time of brain death -->
            <label for="time_of_death">Time of Death: </label>
            <input type="datetime-local" id="time_of_death" name="time_of_death" required>
            <br><br>
        
     <div class="btns-group">
        <a href="#" class="prevbutton button ">Previous</a>  
        <a href="#" class="nextbutton button ">Next</a>  
    </div>
    </div>  

    <!-- thirdpage -->
    <div class="form-step ">     
        
        <!-- organ to donate -->
        <div class="input-group">
            <label for="organselect">Select the organs:</label><br>
            <input type="checkbox" name="organs" value="heart"> Heart
            <input type="checkbox" name="organs" value="kidney"> Kidney
            <input type="checkbox" name="organs" value="liver"> Liver
            <input type="checkbox" name="organs" value="lungs"> Lungs
            <input type="checkbox" name="organs" value="pancreas"> Pancreas
            <input type="checkbox" name="organs" value="corneas"> Corneas
        </div><br>

       <!-- concent -->
        <div class="input-group">
        <label for="consent"> Donor's consent for organ donation.
            <input class="check" type="checkbox" id="consent" name="consent" required> 
        </label> 
    </div>

    <!-- concent -->
        <div class="input-group">
        <label for="consent">  family's consent for organ donation.
            <input class="check" type="checkbox" id="consent" name="consent" required> 
        </label> 
    </div>

        <div class="btns-group">
        <a href="#" class="prevbutton button">Previous</a>  
        <input type="submit" value="Submit" class="button"> 
    </div>
 </div>  
    </form>
</body>
</html>